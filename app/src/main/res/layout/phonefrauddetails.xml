<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="4dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">
        <TextView
            android:id="@+id/fraud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Fraud Name : "/>

        <TextView
            android:id="@+id/fraudname"
            android:layout_toEndOf="@id/fraud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/wallet"
            android:layout_below="@id/fraud"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Wallet Name : "/>

        <TextView
            android:id="@+id/walletname"
            android:layout_below="@id/fraud"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/phone"
            android:layout_below="@id/wallet"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Phone number : "/>

        <TextView
            android:id="@+id/phonenumber"
            android:layout_below="@id/wallet"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/phonenumber"
            android:layout_alignParentEnd="true"
            android:text="View details >"
            android:textColor="@color/viewDetails"
            android:layout_marginEnd="8dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>